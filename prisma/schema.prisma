generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  title            String
  slug             String   @unique
  shortDescription String
  heroImage        String?
  galleryImages    String[]
  techStack        String[]
  githubUrl        String?
  liveUrl          String?
  featured         Boolean  @default(false)
  status           Status   @default(DRAFT)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  order            Int      @default(0) // For custom sorting
}

enum Status {
  DRAFT
  PUBLISHED
}

model Skill {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  category          String
  icon              String
  proficiency       Int      @default(1) // 1-5
  yearsOfExperience Int      @default(0)
  order             Int      @default(0)
}

model Experience {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  company     String
  role        String
  description String
  startDate   DateTime
  endDate     DateTime?
  current     Boolean   @default(false)
  techUsed    String[]
  order       Int       @default(0) // For custom sorting
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  slug      String   @unique
  excerpt   String
  content   String
  tags      String[]
  published Boolean  @default(false)
  views     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Analytics {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  eventType String   @default("PAGE_VIEW") // PAGE_VIEW | PROJECT_CLICK | CONTACT_CLICK
  metadata  Json?
  createdAt DateTime @default(now())
}

model Config {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  siteTitle      String @default("Portfolio")
  name           String @default("Your Name")
  heroTitle      String @default("Hello, I am a Developer")
  heroSubtitle   String @default("I build systems and experiences.")
  heroImage      String?
  avatarUrl      String?
  theme          Theme  @default(SYSTEM)
  contactEmail   String @default("hello@example.com")
  githubUrl      String?
  linkedinUrl    String?
  resumeUrl      String?
  socialLinks    Json?  // Array of { platform, url }
  seoDefaults    Json?  // { title, description, keywords }
}

enum Theme {
  LIGHT
  DARK
  SYSTEM
}
